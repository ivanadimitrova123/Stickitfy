<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" contexnt="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg pb-4 pt-2">
        <div class="container">
            <a class="navbar-brand col-xxl-6 col-4" href="~/Home/Index">     
                <img  src="../../Images/logo.png" alt="logo" style="height:60px; width:auto;"/>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon">
                    <i class="fa fa-bars" aria-hidden="true"></i>
                </span>
            </button>
            <div class="collapse navbar-collapse col-xxl-6 col-8  justify-content-lg-end justify-content-center" id="navbarNav">
                <ul class="navbar-nav fs-5">
                    <li class="nav-item pe-3">
                        <a class="nav-link link-navbar d-flex justify-content-center" href="~/Home/Index"> Home </a>
                    </li>
                    <li class="nav-item pe-3">
                        <a class="nav-link link-navbar d-flex justify-content-center" href="~/Home/Contact"> Contact </a>
                    </li>
                    <li class="nav-item pe-3">
                        <a class="nav-link link-navbar d-flex justify-content-center" href="~/Home/About"> About </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link link-navbar d-flex justify-content-center" href="~/Cart/ShowListItemsInCart"> Cart </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="body-content">
        @RenderBody()
    </div>

    <footer>
        <div class=" row py-5 text-center fs-4">
            <div class="col-4">
                <p class="fw-bold">Категории</p>
                <ul>
                    <li>
                        Space
                    </li>
                    <li>
                        Collorfull
                    </li>
                    <li>
                        Marbel
                    </li>
                    <li>
                        Cartoon
                    </li>
                    <li>
                        Summer
                    </li>
                </ul>
            </div>
            <div class="col-4">
                <p class="fw-bold">Следете не: </p>
                <a href="#"><i class="fa fa-facebook fa-2x me-4 " style="color: black; height: 20px; width: auto;" aria-hidden="true"></i></a>
                <a href="#"><i class="fa fa-instagram fa-2x me-5"style="color:black; height: 20px; width:auto;" aria-hidden="true"></i></a>
                <div class="col-12 mt-4">
                    <img src="~/Images/blue-logo.png" height="66px" width="auto" />
                </div>
            </div>
            <div class="col-4">
                <p class="fw-bold">Инфо.</p>
                <ul>
                    <li>За нас</li>
                    <li>Политика на приватност</li>
                    <li>Услови за користење</li>
                    <li>Контакт</li>
                </ul>
            </div>
        </div>
        <div class="text-center p-3 fs-4" style="background-color: whitesmoke">
            © 2020 Copyright:stick-it-fy.mk
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
<style>
    body {
        padding-bottom:0;
        padding-top:0;
    }
   
    .link-navbar {
        color: #4e4e4e;
        font-size: 15px;
    }

    .link-navbar:hover {
        color: #50d38d;  
        text-decoration: none;
    }

    .navbar-brand {
        color: #4e4e4e;
        font-size: 15px;
    }

    li {
        list-style-type: none;
        
    }
    footer {
        background-color: #D5EBF8;
        box-shadow: 0 -5px 12px -5px gray;
    }
</style>