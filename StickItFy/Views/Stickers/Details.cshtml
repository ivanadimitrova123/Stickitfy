@model StickItFy.Models.Sticker

@{
    ViewBag.Title = "Details";
}
<head>
    <link rel="stylesheet" href="">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</head>
<div class="container">
    <h2>Details</h2>
    <h4>Sticker</h4>
    <hr/>

    <div class="row fs-4">
        <div class="col-md-6 mr-5">
            <img src="@Model.ImageUrl" style="height:330px; width:470px;" />
        </div>
        <div class="col-md-5">
            <p>
                @Html.DisplayNameFor(model => model.Category)
                @Html.DisplayFor(model => model.Category)
            </p>
            <p>
                @Html.DisplayNameFor(model => model.NameOfProduct)
                @Html.DisplayFor(model => model.NameOfProduct)
            </p>
            <p>
                @Html.DisplayNameFor(model => model.Price)
                @Html.DisplayFor(model => model.Price)
            </p>
            <ul>
                <li>-Сјајна фолија </li>
                <li>-Материјал од висок квалитет</li>
                <li>-Лесно за аплицирање</li>
                <li>-Се аплицира на чиста и мазна површина</li>
                <li>-Долготрајно и водоотпорно</li>
            </ul>

            @using (Html.BeginForm("AddStickerToCart", "Cart", new { Id = Model.Id }, FormMethod.Post))
            {
                <button class="fs-3" style="background-color: #50d38d; color: white; border: none; border-radius: 10px;"><a style="color:white; text-decoration:none;" class="px-5 py-5 fs-2">Add To Cart</a></button>
            }
           
        </div>
        <p>
            @if (User.IsInRole("Editor") || User.IsInRole("Administrator"))
            {
                <button type="submit" class="btn btn-default">@Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { style = "text-decoration:none;" })</button>
            }

            <button type="submit" class="btn btn-default">@Html.ActionLink("Back to List", "Index", new { style = "text-decoration:none;" })</button>
        </p>

    </div>

